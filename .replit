run = "python scheduler.py"
language = "python3"
entrypoint = "scheduler.py"
modules = ["python-3.11"]

[nix]
channel = "stable-22_11"
packages = ["ffmpeg", "freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[env]
PYTHONPATH = "${PYTHONPATH}:${HOME}/${REPL_SLUG}"

[packager]
language = "python3"

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true

[deployment]
run = ["sh", "-c", "python scheduler.py"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "StoicAlgo Pipeline"

[[workflows.workflow]]
name = "StoicAlgo Pipeline"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scheduler.py"

[[ports]]
localPort = 8080
externalPort = 80

[agent]
expertMode = true
