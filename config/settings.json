  "llm": {
    "provider": "openai",
    "model": "gpt-4o",
    "temperature": 0.8,
    "max_tokens": 2000
  },
  
  "image": {
    "curated_weight": 0.85,
    "ai_injected_weight": 0.15,
    "output_width": 1080,
    "output_height": 1920,
    "categories": [
      "statues",
      "warriors",
      "nature",
      "temples",
      "sonder"
    ]
  },
  
  "video": {
    "duration_seconds": 10,
    "fps": 30,
    "zoom_factor": 1.15,
    "pan_speed": 0.5,
    "text_font": "assets/fonts/Montserrat-Bold.ttf",
    "text_color": "#FFFFFF",
    "text_stroke_color": "#000000",
    "text_stroke_width": 3,
    "text_shadow": true,
    "overlay_opacity": 0.3
  },
  
  "audio": {
    "mode": "ORIGINAL_ONLY",
    "modes_available": [
      "ORIGINAL_ONLY",
      "IG_AUDIO_ONLY",
      "MIXED",
      "MINIMAL_FOR_MANUAL_REPLACE"
    ],
    "original_volume": 0.4,
    "fade_in_duration": 1.0,
    "fade_out_duration": 2.0
  },
  
  "instagram": {
    "post_type": "REELS",
    "share_to_feed": true,
    "max_caption_length": 2200,
    "hashtag_count": 20
  },
  
  "paths": {
    "images": "assets/images",
    "audio": "assets/audio",
    "fonts": "assets/fonts",
    "output": "output",
    "logs": "logs",
    "config": "config"
  },
  
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "max_file_size_mb": 10,
    "backup_count": 5
  },
  
  "ai_image_generation": {
    "enabled": true,
    "provider": "stability",
    "model": "stable-diffusion-xl-1024-v1-0",
    "weekly_count": 2,
    "style_preset": "cinematic",
    "cfg_scale": 7,
    "steps": 30
  },
  
  "animation": {
    "enabled": true,
    "frequency": 5,
    "duration": "10",
    "provider": "fal-ai",
    "model": "kling-video/v2.1/standard/image-to-video",
    "motion_prompt": "Slow dramatic cinematic motion, gentle wind, clouds drifting slowly across sky, water softly rippling, leaves gently swaying, smooth slow camera movement, atmospheric depth",
    "preferred_categories": ["nature", "sonder", "warriors"],
    "avoid_categories": ["temples", "statues"]
  },
  
  "reference_person": {
    "enabled": false,
    "frequency": 10,
    "default_prompt": "Real documentary footage of a woman moving gracefully through the scene, wide shot from distance showing full environment, authentic natural body language and movement, photorealistic human with natural skin texture showing pores and subtle imperfections, genuine facial expressions, shot on 35mm Kodak film stock with organic grain texture, golden hour natural lighting, shallow depth of field bokeh, 8K cinematic quality indistinguishable from real footage",
    "preferred_backgrounds": ["temples", "nature", "warriors"],
    "model": "fal-ai/vidu/q1/reference-to-video",
    "movement_amplitude": "medium"
  },
  
  "reel_type": {
    "default": "standard",
    "types_available": ["standard", "flash_reel"],
    "frequency_flash": 0
  },
  
  "flash_reel": {
    "enabled": false,
    "image_flash_duration_ms": 300,
    "images_per_reel": 20,
    "word_reveal_speed": "dramatic",
    "words_per_flash": 2,
    "dramatic_pause_ms": 800,
    "ending_phrase": "read the caption for real world applications",
    "voice": {
      "provider": "fal-ai",
      "model": "resemble-ai/chatterboxhd/text-to-speech",
      "voice": "Cliff",
      "exaggeration": 0.5,
      "cfg": 0.4,
      "intro_exaggeration": 0.4,
      "intro_cfg": 0.45,
      "sinister_exaggeration": 0.7,
      "sinister_cfg": 0.35
    },
    "background_audio": {
      "volume": 0.2,
      "track": "dramatic_tension.mp3"
    },
    "text_style": {
      "font": "assets/fonts/Panchang-Regular.ttf",
      "color": "#FFFFFF",
      "glow_color": "#FF4444",
      "size_multiplier": 1.3
    }
  }
}
